<div class="container">
  <div class="row">
    <h3 class="my-5 px-4", style="background:#EEEEEE;">管理者ログイン</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-lg-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="font-weight-normal" style="width:25%"><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %></td>
          </tr>
          <tr>
            <th class="font-weight-normal"><%= f.label :パスワード %></th>
            <td><%= f.password_field :password, autocomplete: "current-password", :size=>"40" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "ログイン", class: "btn btn-primary px-5" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
</div>