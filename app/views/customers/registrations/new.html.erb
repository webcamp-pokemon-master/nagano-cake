<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-lg-7 offset-lg-2" >
      <h3 class="mt-4 mb-5", style="background:#EEEEEE;">新規会員登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :"(姓)" %>
          <%= f.text_field :last_name, autofocus: true %>
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"住所" %>
          <%= f.text_field :address, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"電話番号(ハイフンなし)" %>
          <%= f.text_field :phone_number, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :"パスワード(6⽂字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :"パスワード(確認⽤)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録",class: 'btn btn-sm btn-success mt-2' %>
        </div>
      <% end %>
      <h3 class="mt-4", style="background:#EEEEEE;">既に登録済みの方</h3>
      <div><%= render "customers/shared/links" %>からログインしてください</div>
    </div>
  </div>
</div>
