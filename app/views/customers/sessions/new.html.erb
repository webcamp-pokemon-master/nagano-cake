<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <h3 class="my-4 px-4", style="background:#EEEEEE;">ログイン</h3>
  </div>
  <div class="row">
    <h5 class="my-4 px-4", style="background:#EEEEEE;">会員の方はこちらからログイン</h5>
  </div>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="font-weight-normal"><%= f.label :"メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"40" %></td>
          </tr>
          <tr>
            <th class="font-weight-normal"><%= f.label :"パスワード" %></th>
            <td><%= f.password_field :password, autocomplete: "current-password",:size=>"40" %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <% if devise_mapping.rememberable? %>
              <div>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <% end %>
            </td>
          </tr>
          <tr>
            <th></th>
              <td><%= f.submit "ログイン",class:'btn btn-primary mt-1 px-5' %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="row">
    <h5 class="my-4 px-4", style="background:#EEEEEE;">会員登録がお済みでない方</h5>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-2 mt-3">
    <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
    </div>
  </div>
</div>