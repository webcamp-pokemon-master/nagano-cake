<div class="container">
	<div class="row">
		<h3 class="my-4 px-4 rounded-circle", style="background:#EEEEEE;">マイページ</h3>
	</div>
	<div class="row">
		<h4 class="font-weight-bold">登録情報</h4>
		<span><%= link_to " 編集する", edit_customer_path, class: "btn btn-success rounded-pill px-4 ml-3" %></span>
	</div>
	<div class="row">
		<div class="col-lg-8">
			<table class="table table-bordered table-condensed mt-3" >
				<tbody>
					<tr>
						<td style="background:#fffacd;">氏名</td>
						<td style="width: 65%"><%= @customer.last_name %><%= @customer.first_name %></td>
					</tr>
					<tr>
						<td style="background:#fffacd;">カナ</td>
						<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
					</tr>
					<tr>
						<td style="background:#fffacd;">郵便番号</td>
						<td><%= @customer.postal_code %></td>
					</tr>
					<tr>
						<td style="background:#fffacd;">住所</td>
						<td><%= @customer.address %></td>
					</tr>
					<tr>
						<td style="background:#fffacd;">電話番号</td>
						<td><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<td style="background:#fffacd;">メールアドレス</td>
						<td><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>
		<div class="row">
			<table class="table table-borderless ml-5">
				<tbody>
					<tr>
						<th style="width: 20%">配送先</th>
						<td><%= link_to " 一覧を見る", delivery_addresses_path, data: {"turbolinks" => false}, class: "btn btn-info rounded-pill px-5" %></td>
					</tr>
					<tr>
						<th>注文履歴</th>
						<td><%= link_to " 一覧を見る", orders_path, class: "btn btn-info rounded-pill px-5" %></td>
					</tr>
				</tbody>
			</table>
		</div>
		</div>
		</div>
	</div>