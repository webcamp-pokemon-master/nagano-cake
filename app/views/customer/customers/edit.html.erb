<h2>会員情報編集</h2>
<%= form_with model: @customer, local: true do |form| %>
      <div class="form-group">
        <label for= 'name'>氏名</label>
        <div class="row">
          <%= f.text_field :last_name, class: "form-control offset-1 col-4"%>
          <%= f.text_field :first_name, class: "form-control offset-1 col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ %>
        <div class="row">
          <%= f.text_field :last_name_kana, class: "form-control offset-1 col-4"%>
          <%= f.text_field :first_name_kana, class: "form-control offset-1 col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %>
        <%= f.text_field :postal_code, class: "form-control offset-1 col-4"%>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address, class: "form-control offset-1 col-10"%>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :phone_number, class: "form-control offset-1 col-4"%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, class: "form-control offset-1 col-4"%>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>
      </div>
<% end %>

    </div>
</div>