<div class="container">
  <div class="row text-center mt-5">
    <div class="col-4">
      <%= attachment_image_tag(@product, :image, size: "340x220", fallback: "no_image.jpg" ) %>
    </div>
    <div class="col-xs-6 offset-1">
      <div class="product-name">
        <h2><%= @product.name %></h2>
      </div>
      <div>
        <%= @product.introduction %>
      </div>
      <div class="product-price mt-3">
        <h3>¥<%= (@product.price * 1.1).floor %>
          <span class="tax">(税込)</span>
        </h3>
      <% if @product.status == true %>
            <%= form_for(@cart_item , url: cart_items_path, method: :post) do |f| %>
              <%= f.hidden_field :products_id, value: @product.id %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
