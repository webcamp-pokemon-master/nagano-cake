<div class="container my-5">
    <div class="row">
      <div class="offset-1">
        <h2 class="red-border px-3 pb-1">ショッピングカート</h2>
      </div>
			<div class="ml-auto">
			   <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-sm btn-danger" %>
			</div>
    </div>
    <div class="row">
    <table class="table table-hover table-bordered">
      <thead>
        <tr class="info">
          <th class="table-secondary">商品名</th>
          <th class="table-secondary" style="width: 15%">単価(税込)</th>
          <th class="table-secondary" style="width: 25%">数量</th>
          <th class="table-secondary" style="width: 15%">小計</th>
          <th class="table-secondary" style="width: 15%"></th>
        </tr>
      </thead>
      <tbody>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td>
						  <%= attachment_image_tag cart_item.product, :image, fallback: 'no_image.jpg', size: '80x50' %>
							<%= cart_item.product.name %>
						</td>
						<td>
							<%= (cart_item.product.price * 1.1).floor %>
						</td>
						<td>
							<%= form_for(cart_item, method: :patch, remote: true) do |f| %>
                <div>
                  <%= f.number_field :amount, min:1,class: "col-4" %>
                  <%= f.submit "変更", class: "btn btn-sm btn-success offset-1 col-4" %>
                </div>
                <% end %>
						</td>
						<td>
							<%= (cart_item.product.price * 1.1).floor * cart_item.amount %>
						</td>
						<td>
							<%= link_to "削除する",cart_item_path(cart_item),method: :delete,class: "btn btn-sm btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>

		<div class="row">
		  <div class="col-4">
		    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
		  </div>
		<div class="col-4 offset-8">
      <table class="table table-bordered text-left">
        <thead>
          <tr>
            <td class="table-secondary" style="width: 35%">合計金額</td>
            <td style="width: 35%">
							<%= @sum %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
    </div>

    <% if @cart_items.present? %>
    <div class="row">
		  <div class="mx-auto">
		    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg" %>
      </div>
    </div>
    <% else %>
    <% end %>
