<div class="container">
  <div class="row">
    <h3 class="my-5 px-4 rounded-circle", style="background:#EEEEEE;">配送先登録/一覧</h3>
  </div>
  <div class="row">
    <div class="col-md-9 mb-3"  align="left">
      <%= render 'layouts/errors', obj: @delivery_address %>
      <!----バリデーション>-->
      <%= form_with(model: @delivery_address, :url => {:controller => "customer/delivery_addresses"}) do |f| %>
        <div class="delivery_addres">

          <div class="form-group col-12">
              <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-4 control-label" %>
              <%= f.text_field :postal_code, class: "col-3 form-control-static postal_code", placeholder: "1102101" %>
          </div>

          <div class="form-group col-12">
              <%= f.label :"住所" ,class: "col-4 control-label" %>
              <%= f.text_field :address, class: "col-6 form-control-static address", placeholder: "東京都小笠原村父島" %>
          </div>

          <div class="form-group col-12">
              <%= f.label :"宛名" ,class: "col-4 control-label" %>
              <%= f.text_field :name, class: "col-3 form-control-static name", placeholder:"ケーキ食太郎" %>
          </div>
          <div class="text-center">
              <%= f.submit '新規登録' ,class: "col-2 pull-right btn-sm btn-success rounded-pill text-center" %>
           </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table table-hover table-bordered">
        <thead>
          <tr class="info">
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_addresses.each do |delivery_address| %>
            <tr>
              <td style="width:15%">
                <%= delivery_address.postal_code %>
              </td>
              <td class="text-left" style="width:40%">
                <%= delivery_address.address %>
              </td>
              <td class="text-left" style="width:20%">
                <%= delivery_address.name %>
              </td>
              <td align="center" style="width:25%">
                <%= link_to "編集する", edit_delivery_address_path(delivery_address), class: "glyphicon glyphicon-pencil btn-sm btn-primary rounded-pill" %>
                <%= link_to "削除する", delivery_address_path(delivery_address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "glyphicon glyphicon-trash btn-sm btn-danger rounded-pill destroy_book_#{delivery_address.id}" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>