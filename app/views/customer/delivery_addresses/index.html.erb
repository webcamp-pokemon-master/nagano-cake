<div class="row">
    <div class="col-10">
        <h2 class="head-line text-center title_h2">配送先登録/一覧</h2>
        <%= render 'layouts/errors', obj: @delivery_address %>
        <%= form_with(model: @delivery_address, :url => {:controller => "customer/delivery_addresses"}) do |f| %>
            <div class="delivery_addres col-12">
                <div class="form-group col-12">
                    <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-4 control-label" %>
                    <%= f.text_field :postal_code, class: "col-4 form-control-static postal_code" %>
                </div>

                <div class="form-group col-12">
                    <%= f.label :"住所" ,class: "col-4 control-label" %>
                    <%= f.text_field :address, class: "col-7 form-control-static address" %>
                </div>

                <div class="form-group col-12">
                    <%= f.label :"宛名" ,class: "col-4 control-label" %>
                    <%= f.text_field :name, class: "col-4 form-control-static name" %>
                </div>
                <%= f.submit '新規登録' ,class: "col-3 pull-right btn-lg btn-success " %>
                </div>
        <% end %>
  <table class="table table-hover table-bordered">
    <thead>
        <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
      <% @delivery_addresses.each do |delivery_address| %>
            <td>
                <%= delivery_address.postal_code %>
            </td>
            <td class="text-left">
                <%= delivery_address.address %>
            </td>
            <td class="text-left">
                <%= delivery_address.name %>
            </td>
            <td>
                <%= link_to "編集する", edit_delivery_address_path(delivery_address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
            </td>
            <td>
                <%= link_to "削除する", delivery_address_path(delivery_address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "glyphicon glyphicon-trash btn-sm btn-danger destroy_book_#{delivery_address.id}" %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
