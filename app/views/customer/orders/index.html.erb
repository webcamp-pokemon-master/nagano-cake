<div class="container my-4">
  <div class="row">
  		<h3 class="my-4 px-4 rounded-circle", style="background:#EEEEEE;">注文履歴一覧</h3>
  </div>

  <div class="row mt-3">
    <table class="table table-hover text-center">
  		<thead style="background:#fffacd;">
  			<tr>
  				<th>注文日</th>
  				<th>配送先</th>
  				<th>注文商品</th>
  				<th>支払金額</th>
  				<th>注文ステータス</th>
  				<th>注文詳細</th>
  			</tr>
  		</thead>

  		<tbody>
  			<% @orders.each do |order| %>
  			<tr>
		      <td class="text-center">
  					<%#注文日%>
	  				<%= order.created_at.strftime("%Y-%m-%d %H:%M") %><%#strftime~で東京の時間にしている,config/locales/application.rbのconfig.time_zone = 'Tokyo'もかく
  				</td>
		      <td class="text-center">
  					<%#配送先%>
  					<%= order.postal_code %><br>
  					<%= order.address %><br>
  					<%= order.name %>
  				</td>

		      <td class="text-center">
  					<%#注文商品%>
  				  <% order.order_products.each do |productname| %>
  				  <%= productname.product.name %><br>
				   	<% end %>
  				</td>

		      <td class="text-center">
  					<%#支払金額%>
						<%= order.payment+800.to_i %>
					</td>

		      <td class="text-center">
  					<%#注文ステータス%>
  					<%= order.status_i18n %>
						<%#<%= order.user_status %>
					</td>

		      <td class="text-center">
  					<%#注文詳細%>
						<%= link_to "表示する", order_path(order), class:"btn btn-primary" %>
					</td>

  			<% end %>
  			</tr>
  		</tbody>
  	</table>
  </div>