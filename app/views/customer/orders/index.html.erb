<div class="container my-5">
  <div class="row">
  		<h2 class="red-border px-3">注文履歴一覧</h2>
  </div>

  <div class="row mt-1">
    <table class="table table-hover text-center">
  		<thead>
  			<tr>
  				<th>注文日</th>
  				<th>配送先</th>
  				<th>注文商品</th>
  				<th>支払金額</th>
  				<th>注文ステータス</th>
  				<th>注文詳細</th>
  			</tr>
  		</thead>

  		<tbody>
  			<% @orders.each do |order| %>
  			<tr>
		      <td class="text-center">
  					<%#注文日%>
	  				<%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
  				</td>
		      <td class="text-center">
  					<%#配送先%>
  					<%= order.postal_code %><br>
  					<%= order.address %><br>
  					<%= order.name %>
  				</td>

		      <td class="text-center">
  					<%#注文商品%>
  				  <% order.order_products.each do |f| %>
  				  <%= f.name %>
				   	<% end %>
  				</td>

		      <td class="text-center">
  					<%#支払金額%>
						<%= order.payment+800.to_i %>
					</td>

		      <td class="text-center">
  					<%#注文ステータス%>
  					<%= order.status %>
						<%#<%= order.user_status %>
					</td>

		      <td class="text-center">
  					<%#注文詳細%>
						<%= link_to "表示する", order_path(order), class:"btn btn-primary" %>
					</td>

  			<% end %>
  			</tr>
  		</tbody>
  	</table>
  </div>