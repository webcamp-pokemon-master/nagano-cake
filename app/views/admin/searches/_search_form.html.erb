<%= search_form_for search, url: url do |f| %>
  <%= f.condition_fields do |c| %>

    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>

    <%= c.predicate_select %>

    <%= c.value_fields do |v| %>
      <%= v.search_field :value %>
    <% end %>
  <% end %>
  <%= f.submit "検索", class: "btn btn-primary rounded-pill" %>
<% end %>

