<div class="container my-5">
  <div class="row">
    <div class="col-md-3 text-center">
      <h2 style="background:#EEEEEE;" class="rounded-circle">商品一覧画面</h2>
    </div>
    <div class="col-md-3">
      <%#= render 'admin/searches/search_form', url: admin_products_path, search: @search %>
      <%#= search_form_for @search, url: admin_products_path do |f| %>
      <%#= f.label :name_cont, "商品名を含む" %>
      <%#= f.search_field :name_cont %>
      <%#= f.submit "検索", class: "btn btn-primary rounded-pill" %>
      <%# end %>
    </div>

  </div>
  <div class="row text-right">
    <%= link_to "+", new_admin_product_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>
  <div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |products| %>
          <tr>
            <td><%= products.id %>
            <td><%= link_to products.name, admin_product_path(products) %></td>
            <td><%= products.price %></td>
            <td><%= products.genre.name %></td>
            <td><% if products.status == true %>
                  販売中
      				  <% else %>
      					  販売停止中
      				  <% end %>
      			</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="container">
    <div class="row">
     <div class="col-md-4 offset-md-4 py-2  mt-5">
      <%= paginate @products %>
     </div>
    </div>
  </div>
</div>
