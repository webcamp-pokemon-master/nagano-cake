
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_with model: @product, url:admin_products_path, local:true do |f| %>
      <table class="table table-borderless">
        <h1>商品新規登録</h1>
        <tbody>
            <tr>
             <td>商品画像</td>
             <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <td>商品名</td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td>  <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
              <!--f.collection_select(メソッド名, オブジェクトの配列, value属性の項目, テキストの項目 [, オプション or HTML属性 or イベント属性])-->
              </td>
            </tr>
            <tr>
              <td>税抜価格</td>
              <td><%= f.text_field :price, class: "form-control" %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <%= f.radio_button :status, true %><!--statusでカラムを指定してtrueで送る値を指定-->
          	    <%= f.label :status, "販売中" %>
                <%= f.radio_button :status, false %>
                <%= f.label :status, "販売停止中" %>
              </td>
            </tr>
            <tr>
              <td>
              <%= f.submit "新規登録", class: "btn btn-success" %>
              </td>
            </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>

