<div class="container my-5">
  <div class="row">
    <div class="col-md-3 mb-3">
      <h3 style="background:#EEEEEE;">ジャンル一覧・追加</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-4">
      <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
      ジャンル名
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-success rounded-pill" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table col-md-5">
      <thead style="background:#EEEEEE;">
        <tr>
          <td>ジャンル</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success rounded-pill" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>