<div class="container my-5">
  <%= render 'layouts/errors', obj: @genre %>
  <div class="row">
    <div class="col-md- mb-4">
      <h2 style="background:#EEEEEE;" class="rounded-circle">ジャンル一覧・追加</h2>

    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-4">
      <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
      ジャンル名
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-outline-success rounded-pill" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table col-md-5" >
      <thead style="background:#fffacd;">
        <tr>
          <td><h4>ジャンル</h2></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-outline-success rounded-pill" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>